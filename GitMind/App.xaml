<Application 
	x:Class="GitMind.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ui="clr-namespace:GitMind.Utils.UI"
	StartupUri="MainWindowViews/MainWindow.xaml">
	
	<Application.Resources>

		<ResourceDictionary>

			<ui:PropertyToVisibilityConverter x:Key="VC"/>
			
			<ResourceDictionary.MergedDictionaries>
				
				<ResourceDictionary Source="Styles\ListBoxScrollbarStyle.xaml"/>
				<ResourceDictionary Source="Styles\ContextMenuStyle.xaml"/>
				<ResourceDictionary Source="Styles\ButtonStyle.xaml"/>
				<ResourceDictionary Source="Styles\ListBoxStyle.xaml"/>
				<ResourceDictionary Source="Styles\ToolTipStyle.xaml"/>
				<ResourceDictionary Source="Styles\LabelStyle.xaml"/>
				<!--<ResourceDictionary Source="Styles\Theme.xaml"/>-->

			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
			
	</Application.Resources>
</Application>
